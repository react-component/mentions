{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "jsx": "react",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"],
      "@@/*": [".dumi/tmp/*"],
      "@rc-component/mentions": ["src/index.ts"]
    }
  },
  "include": [".dumirc.ts", "**/*.ts", "**/*.tsx"]
}
